                    <Image x:Name="startIcon" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right"/>
                    <Image x:Name="endIcon" Grid.Row="3" Grid.Column="5" HorizontalAlignment="Right"/>
                    <Image x:Name="ClockIcon1" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right"/>
                    <Image x:Name="ClockIcon2" Grid.Row="5" Grid.Column="5" HorizontalAlignment="Right"/>
                    <Image x:Name="cardArrow1" Grid.Row="3" Grid.Column="4" HorizontalAlignment="Center"/>
                    <Image x:Name="cardArrow2" Grid.Row="5" Grid.Column="4" HorizontalAlignment="Center"/>

                    <Viewbox Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" HorizontalAlignment="Left">
                        <Label Content="Vozna karta" FontStyle="Italic" FontWeight="Bold" Foreground="DarkBlue" FontSize="17"></Label>
                    </Viewbox>

                    <Border Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" BorderBrush="Bisque" BorderThickness="0,0,0,1"></Border>
                    <Label Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="2" HorizontalAlignment="Left">
                        <TextBlock FontSize="15" TextWrapping="WrapWithOverflow" Foreground="DarkBlue" Text="{Binding StartStation.Name}"/>
                    </Label>

                    <Border Grid.Row="3" Grid.Column="6" Grid.ColumnSpan="2" BorderBrush="Bisque" BorderThickness="0,0,0,1"></Border>
                    <Label Grid.Row="3" Grid.Column="6" Grid.ColumnSpan="2" Grid.RowSpan="2" HorizontalAlignment="Left" Foreground="DarkBlue" FontSize="11" VerticalAlignment="Stretch" >
                        <TextBlock FontSize="15" TextWrapping="WrapWithOverflow" Foreground="DarkBlue" Text="{Binding EndStation.Name}"/>
                    </Label>

                    <Viewbox Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Left">
                        <Label Foreground="DarkBlue" FontSize="7" Content="{Binding StartDateTime}" BorderBrush="Bisque" BorderThickness="0,0,0,1"></Label>
                    </Viewbox>
                    <Viewbox Grid.Row="5" Grid.Column="6" Grid.ColumnSpan="2" HorizontalAlignment="Left">
                        <Label Foreground="DarkBlue" FontSize="7" Content="{Binding ArrivalDateTime}" BorderBrush="Bisque" BorderThickness="0,0,0,1"></Label>
                    </Viewbox>

                    <Viewbox x:Name="returnTicketLabel" Grid.Row="6" Grid.Column="1"  HorizontalAlignment="Left" Grid.ColumnSpan="2" Visibility="Hidden">
                        <Label Foreground="DarkBlue" FontSize="10" Content="Povrtna karta: da" ></Label>
                    </Viewbox>
                    <Viewbox  x:Name="returnTicketExpireLabel" Grid.Row="6" Grid.Column="4" Grid.ColumnSpan="2"  HorizontalAlignment="Left" Visibility="Hidden">
                        <Label Foreground="DarkBlue" FontSize="10" Content="Povrtna karta važi do" ></Label>
                    </Viewbox>
                    <Viewbox x:Name="returnTicketExpireDate" Grid.Row="6" Grid.Column="6" HorizontalAlignment="Left" Visibility="Hidden">
                        <Label Foreground="DarkBlue" FontSize="10" Content="{Binding ExpireDate}" ></Label>
                    </Viewbox>
                    <Viewbox Grid.Row="7" Grid.Column="1"  HorizontalAlignment="Left">
                        <Label Foreground="DarkBlue" FontSize="10" Content="Voz:" ></Label>
                    </Viewbox>
                    <Viewbox Grid.Row="7" Grid.Column="2"  HorizontalAlignment="Left">
                        <Label Foreground="DarkBlue" FontSize="10" Content="{Binding SelectedRide.train.Name}" ></Label>
                    </Viewbox>
                    <Viewbox Grid.Row="8" Grid.Column="1"  HorizontalAlignment="Left">
                        <Label Foreground="DarkBlue" FontSize="10" Content="Razred:" ></Label>
                    </Viewbox>
                    <Viewbox Grid.Row="8" Grid.Column="2"  HorizontalAlignment="Left">
                        <Label Foreground="DarkBlue" FontSize="10" Content="{Binding SelectedRide.ClassNumber}" ></Label>
                    </Viewbox>
                    <Viewbox Grid.Row="7" Grid.Column="4"  HorizontalAlignment="Left">
                        <Label Foreground="DarkBlue" FontSize="10" Content="Vagon:" ></Label>
                    </Viewbox>
                    <Viewbox Grid.Row="7" Grid.Column="5"  HorizontalAlignment="Left">
                        <Label Foreground="DarkBlue" FontSize="10" Content="{Binding Wagon.OrderdNumber}" ></Label>
                    </Viewbox>
                    <Viewbox Grid.Row="8" Grid.Column="4"  HorizontalAlignment="Left">
                        <Label Foreground="DarkBlue" FontSize="10" Content="Sediste:" ></Label>
                    </Viewbox>
                    <Viewbox Grid.Row="8" Grid.Column="5"  HorizontalAlignment="Left">
                        <Label Foreground="DarkBlue" FontSize="10" Content="{Binding Seat.SeatNumber}" ></Label>
                    </Viewbox>

                    <Border Background="#E8F0F2" BorderBrush="#204060" BorderThickness="1.5,0,1.5,1.5" CornerRadius="0,0,15,15" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="8"></Border>

                    <Border CornerRadius="10" Background="Bisque" Grid.Row="7" Grid.Column="6"/>
                    <Viewbox Grid.Row="7" Grid.Column="6">
                        <Label Content="{Binding SelectedRide.priceStr}" FontWeight="Bold" FontSize="10" Foreground="DarkBlue"></Label>
                    </Viewbox>
                </Grid>
                <Grid Grid.Column="0" Grid.Row="13" Grid.ColumnSpan="6" Margin="77,0,38,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Button Grid.Column="1" Content="Odustani" Background="#BB6464" Foreground="White" FontWeight="Bold" Click="cancleClicked" x:Name="CancelBtnFirst" Visibility="Hidden" />
                    <Button Grid.Column="3" Content="Odustani" Background="#BB6464" Foreground="White" FontWeight="Bold" Click="cancleClicked" x:Name="CancelBtnSecond" />
                    <Button Grid.Column="3" Content="Rezerviši" Background="#FFA881" Foreground="White" FontWeight="Bold" Click="reservationTicketClicked" x:Name="ReservBtn" Visibility="Hidden"></Button>
                    <Button Grid.Column="5" Content="Kupi" Background="#86b069" Foreground="White" FontWeight="Bold" Click="buyTicketClicked" x:Name="BoughtBtn"/>


                </Grid>
                <Viewbox Margin="15,0,0,0" x:Name="ReservationMessageLabel" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="13" HorizontalAlignment="Right" Visibility="Hidden">
                    <Label HorizontalAlignment="Right" Content="*Rezervacija nije dozvoljena u poslednja 24h pred polazak!" Foreground="#CF1B0D" FontSize="14" VerticalAlignment="Center"></Label>
                </Viewbox>

            </Grid>
        </Grid>

    </Grid>
</Page>

    